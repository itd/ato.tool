<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ato.tool">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">


    <tal:comment tal:condition="nothing">
      <h2>
        Rendered from
        compliancecontrol_templates/<span tal:replace="template/id"/>
      </h2>
    </tal:comment>

    <h2 class=".documentFirstTitle"
        tal:content="context/Title">[[Title inserted here]]</h2>

    <div class="descriptionWrapper">
      <h3>Description</h3>

      <div tal:content="context/description">[[description]]</div>
    </div>

    <div class="descriptionWrapper">
      <h3>Details</h3>

      <div class="docDetails"
           tal:content="context/details">[[details]]
      </div>
    </div>


    <div class="controlrefWrapper">
      <h3>Control Reference</h3>

      <div tal:content="context/controlref">[[Control Reference]]</div>
    </div>

    <div class="policyWrapper">
      <h3>Policy</h3>

      <div tal:content="context/policy">[[our policy details here]]</div>
    </div>

    <div class="deviationWrapper">
      <h3>Deviation</h3>

      <div tal:content="context/deviation">[[deviation details here]]</div>
    </div>

    <div class="workinstructionWrapper">
      <h3>Work Instruction</h3>

      <div class="workinstructionLink"><a
          tal:attribs="href context/workinstruction"><span
          tal:replace="context/workinstruction">
            [[URL/link to work instruction]]</span></a>
      </div>
    </div>


  </metal:content-core>
</metal:main>

</body>
</html>

